<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    >
<RelativeLayout
    android:id="@+id/countryinfopage"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="16dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/flag_boss"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_margin="5dp"
        android:elevation="10dp"
        app:cardCornerRadius="8dp">

        <ImageView
            android:id="@+id/flag"
            android:layout_width="134dp"
            android:layout_height="80dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:contentDescription="hi" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/country"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="100dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:paddingBottom="30dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="40sp"
        tools:text="Canada" />

    <TextView
        android:id="@+id/total_case_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/country"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/subheading"
        android:textSize="16sp"
        tools:text="Total cases:" />

    <TextView
        android:id="@+id/total_case"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/total_case_title"
        android:layout_centerHorizontal="true"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:maxLines="1"
        android:paddingTop="30dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="60sp"
        tools:text="12367897" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/total_case"
        android:layout_centerHorizontal="true"
        android:background="@color/cool_yellow"
        android:padding="5dp">

        <TextView
            android:id="@+id/todaycasestitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="center"
            android:textColor="@color/default_grey"
            android:textSize="20sp"
            tools:text="+ 25 new cases" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="290dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/active_case_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textColor="@color/subheading"
            android:textSize="16sp"
            tools:text="Active:" />

        <TextView
            android:id="@+id/active_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            android:textSize="36sp"
            tools:text="12345689" />

        <TextView
            android:id="@+id/recovered_case_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="25dp"
            android:textAllCaps="true"
            android:textColor="@color/subheading"
            android:textSize="16sp"
            tools:text="Recovered:" />

        <TextView
            android:id="@+id/recovered_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            android:textSize="36sp"
            tools:text="1234569" />

        <TextView
            android:id="@+id/new_recovered_case_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="25dp"
            android:textAllCaps="true"
            android:textColor="@color/subheading"
            android:textSize="16sp"
            tools:text="@string/newrecovered" />

        <TextView
            android:id="@+id/new_recovered_case"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAllCaps="true"
            android:textColor="@color/green"
            android:textSize="36sp"
            tools:text="1245" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/four_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="290dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/critical_case_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/subheading"
            android:textSize="16sp"
            tools:text="Critical:" />

        <TextView
            android:id="@+id/critical_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textSize="36sp"
            tools:text="123789" />

        <TextView
            android:id="@+id/deaths_case_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="25dp"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/subheading"
            android:textSize="16sp"
            tools:text="Deaths:" />

        <TextView
            android:id="@+id/deaths_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textSize="36sp"
            tools:text="1234569" />

        <TextView
            android:id="@+id/new_deaths_case_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingTop="25dp"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/subheading"
            android:textSize="16sp"
            tools:text="@string/newdeaths" />

        <TextView
            android:id="@+id/new_deaths_case"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-medium"
            android:textAlignment="textEnd"
            android:textAllCaps="true"
            android:textColor="@color/red"
            android:textSize="36sp"
            tools:text="1269" />
    </LinearLayout>

    <TextView
        android:id="@+id/pop_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/four_linear"
        android:ellipsize="end"
        android:maxLines="1"
        android:paddingTop="25dp"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="@color/subheading"
        android:textSize="16sp"
        tools:text="Population:" />

    <TextView
        android:id="@+id/pop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/pop_title"
        android:fontFamily="sans-serif-medium"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textSize="36sp"
        tools:text="1232222222" />
</RelativeLayout>
</ScrollView>